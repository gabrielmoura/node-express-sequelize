<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Teste de Página</title>
    <script src="/app.js"></script>
</head>
<body>
<%- include('../../layout/navbar') %>
<div class="container">
    <h3>Artigos</h3>
    <a href="/admin/article/create" class="btn btn-success">Adicionar Artigo</a>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Categoria</th>
            <th>Artigo</th>
            <th>Ação</th>
        </tr>
        </thead>
        <tbody>
        <% articles.forEach((article)=>{ %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.category.title %></td>
                <td><%= article.body %></td>
                <td>
                    <a href="/admin/article/<%= article.slug %>" class="btn btn-success">Ver</a>
                    <a href="/admin/article/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                    <form action="/admin/article/delete" method="post" style="display: inline;">
                        <input type="hidden" value="<%= article.id %>" name="id">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>