<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Teste de Página</title>
    <script src="/app.js"></script>
</head>
<body>
<%- include('../../layout/navbar') %>
<div class="container">
    <h3>Categorias</h3>
    <a href="/admin/category/create" class="btn btn-success">Adicionar Categoria</a>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Titulo</th>
            <th>Slug</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        <% categories.forEach((category)=>{ %>
            <tr>
                <td><%= category.id %></td>
                <td><%= category.title %></td>
                <td><%= category.slug %></td>
                <td>
                    <a href="/admin/category/<%= category.slug %>" class="btn btn-success">Ver</a>
                    <a href="/admin/category/edit/<%= category.id %>" class="btn btn-warning">Editar</a>
                    <form action="/admin/category/delete" method="post" style="display: inline;">
                        <input type="hidden" value="<%= category.id %>" name="id">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>

</div>
</body>
</html>