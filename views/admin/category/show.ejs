<%- include('../../layout/headAdmin') %>
<div class="container">
    <% if(category){ %>
    <h3><%= category.title %></h3>
    <% category.articles.forEach(article=>{ %>
        <div class="card">
            <div class="card-header">
                <%= article.title??null %>
            </div>
            <div class="card-body">
                <a href="/admin/article/<%= article.slug??null %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
    <% })} %>

</div>
<%- include('../../layout/footerAdmin') %>